---
import Layout from "../layouts/Layout.astro"
import { Image } from "astro:assets"

import e from "../images/SQEquipment.jpg"
import w from "../images/SQWindow.jpg"
import s from "../images/SQScreen.jpg"
import t from "../images/SQTruck.jpg"

import MainSection from "../components/MainSection.astro"
---

<Layout title="Gallery">
  <MainSection>
    <div
      class="pt-5"
      style="display: grid; grid-template-columns: repeat(2, 1fr); 
      grid-template-rows: repeat(2, 1fr); 
      gap: .5rem;
      width: 100%; 
      aspect-ratio: 1/1;"
    >
      <Image src={e} width={650} alt="H2O Power Pro gear" />
      <!-- switch these ones -->
      <Image src={w} width={650} alt="Window screen washing" />
      <Image src={s} width={650} alt="Window washing first floor" />
      <Image src={t} width={650} alt="Window washing second floor" />
    </div>

    <style>
      .embed-container {
        position: relative;
        padding-bottom: 56.25%;
        height: 0;
        overflow: hidden;
        max-width: 100%;
        margin-top: 0.5rem;
      }
      .embed-container iframe,
      .embed-container object,
      .embed-container embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
      }
    </style>

    <div class="embed-container">
      <iframe
        src="https://www.youtube.com/embed/NF7EQ7Rq1eA?si=lkzTEe7HLR6BbG8x"
        frameborder="0"
        allowfullscreen></iframe>
    </div>
    <div class="embed-container">
      <iframe
        src="https://www.youtube.com/embed/TiYYaMmbyKQ"
        frameborder="0"
        allowfullscreen></iframe>
    </div>
    <div class="embed-container">
      <iframe
        src="https://www.youtube.com/embed/F0AJyVa-x5Q?si=DVl9lOVG8_JtHpxl"
        frameborder="0"
        allowfullscreen></iframe>
    </div>
  </MainSection>
</Layout>
